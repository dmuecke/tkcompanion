<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/button_snap"
        android:layout_width="90dip"
        android:layout_height="90dip"
        android:src="@drawable/ic_social_person"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cosima"
        android:id="@+id/swim_name"
        android:textSize="20sp"
        android:layout_toEndOf="@+id/button_snap"
        android:layout_marginLeft="55dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Position: "
        android:id="@+id/textView5"
        android:layout_alignStart="@+id/swim_name"
        android:layout_below="@+id/swim_name"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/swim_position"
        android:layout_alignParentBottom="false"
        android:layout_toEndOf="@+id/textView5"
        android:textSize="15sp"
        android:layout_below="@+id/swim_name" />


</RelativeLayout>
