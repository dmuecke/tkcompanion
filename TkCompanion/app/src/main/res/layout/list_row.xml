<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/button_snap"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:src="@android:drawable/sym_def_app_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cosima"
        android:id="@+id/swim_name"
        android:textSize="20sp"
        android:layout_toEndOf="@+id/button_snap"
        android:layout_marginLeft="55dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time: "
        android:id="@+id/textView5"
        android:layout_alignStart="@+id/swim_name"
        android:layout_below="@+id/swim_name"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00.0"
        android:id="@+id/split_time"
        android:layout_alignParentBottom="false"
        android:layout_toEndOf="@+id/textView5"
        android:textSize="15sp"
        android:layout_below="@+id/swim_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Round: "
        android:id="@+id/textView"
        android:layout_toEndOf="@+id/split_time"
        android:textSize="15sp"
        android:layout_alignBottom="@+id/split_time"
        android:layout_marginLeft="@dimen/activity_vertical_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/text_round"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textView"
        android:layout_toEndOf="@id/textView"
        android:textSize="15sp" />

</RelativeLayout>
