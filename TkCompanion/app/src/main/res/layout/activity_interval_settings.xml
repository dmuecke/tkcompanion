<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.muecke.tkcompanion.IntervalSettingsActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swimmers:"
            android:id="@+id/swim_name"
            android:textSize="20sp"
            android:layout_alignBottom="@+id/count_swimmers"
            android:layout_alignParentStart="true" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/count_swimmers"
            android:layout_alignParentRight="true"
            android:text="1"
            android:textSize="20sp" />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gap:"
            android:id="@+id/textView4"
            android:textSize="20sp"
            android:layout_alignParentLeft="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/gap_time"
            android:textSize="20sp"
            android:text="5"
            android:layout_alignParentRight="true"/>

        </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interval:"
            android:id="@+id/textView2"
            android:textSize="20sp"
        android:layout_alignParentLeft="true"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/interval_time"
            android:textSize="20sp"
            android:text="40"
            android:layout_alignParentRight="true"/>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance:"
            android:id="@+id/textView3"
            android:textSize="20sp"
        android:layout_alignParentLeft="true"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/distance"
            android:textSize="20sp"
            android:text="25"
            android:layout_alignParentRight="true"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/button_save"
            android:textSize="40sp"
            android:layout_below="@+id/distance"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="72dp" />


    </RelativeLayout>



</LinearLayout>
